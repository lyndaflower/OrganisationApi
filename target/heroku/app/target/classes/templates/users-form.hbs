{{#partial "styles"}}
    <link rel='stylesheet' href='css/style.css'>
{{/partial}}
{{#partial "content"}}

        <div class="form" id="users">
            <h2 style="text-align:center;">CREATE USER</h2>
            <div class="hr"></div>

            <form action="/userCreate" method="post">

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Enter name" required>
                </div>

                <div class="form-group">
                    <label for="role">Role</label>
                    <input type="text" name="role" class="form-control" placeholder="Enter role" required>
                </div>

                <div class="form-group">
                    <label for="position">Position</label>
                    <input type="text" name="position" class="form-control" placeholder="Enter Position" required>
                </div>

                <div class="form-group">
                    <label for="departmentId">Department number</label>
                    <input type="text" name="departmentId" class="form-control" placeholder="Enter Department number" required>
                </div>

                <div class="form-group">
                    <button type="submit" class="button button-block">Create user</button>
                </div>
            </form>
        </div>

{{/partial}}
{{> layout.hbs}}