
{{#partial "styles"}}
    <link rel='stylesheet' href='css/style.css'>
{{/partial}}
{{#partial "content"}}

    <div class="form" id="newss">
            <h2 style="text-align:center;">PUBLISH NEWS </h2>
            <div class="hr"></div>

            <form action="/view" method="post">
                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" name="author" class="form-control" placeholder="Enter name" required>
                </div>

                <div class="form-group">
                    <label for="news">News</label>
                    <textarea type="text" name="news" class="form-control" placeholder="Enter the news" required></textarea>
                    <br>
                    <button type="submit" class="button button-block" value="Publish News">Publish news</button>
                </div>
            </form>
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}